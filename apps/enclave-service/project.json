{
  "name": "@gardbase/enclave-service",
  "sourceRoot": "apps/enclave-service",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go build -o ../../dist/apps/enclave-service/main ./cmd/enclave",
        "cwd": "apps/enclave-service"
      },
      "outputs": ["{workspaceRoot}/dist/apps/enclave-service"]
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t gardbase-api:latest-enclave -f Dockerfile.enclave ."
      }
    },
    "docker-tag": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker tag gardbase-api:latest-enclave {args.aws_account_id}.dkr.ecr.{args.aws_region}.amazonaws.com/gardbase-api:latest-enclave"
      }
    },
    "docker-login": {
      "executor": "nx:run-commands",
      "options": {
        "command": "aws ecr get-login-password --region {args.aws_region} | docker login --username AWS --password-stdin {args.aws_account_id}.dkr.ecr.{args.aws_region}.amazonaws.com"
      }
    },
    "docker-push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker push {args.aws_account_id}.dkr.ecr.{args.aws_region}.amazonaws.com/gardbase-api:latest-enclave"
      }
    },
    "build-and-push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run @gardbase/enclave-service:docker-build && nx run @gardbase/enclave-service:docker-tag --aws_account_id={args.aws_account_id} --aws_region={args.aws_region} && nx run @gardbase/enclave-service:docker-login --aws_account_id={args.aws_account_id} --aws_region={args.aws_region} && nx run @gardbase/enclave-service:docker-push --aws_account_id={args.aws_account_id} --aws_region={args.aws_region}"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run ./cmd/enclave",
        "cwd": "apps/enclave-service"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "air",
        "cwd": "apps/enclave-service"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test ./...",
        "cwd": "apps/enclave-service"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "golangci-lint run",
        "cwd": "apps/enclave-service"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "gofmt -w .",
        "cwd": "apps/enclave-service"
      }
    },
    "tidy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go mod tidy",
        "cwd": "apps/enclave-service"
      }
    }
  }
}
