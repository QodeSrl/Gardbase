{
  "name": "@gardbase/api",
  "sourceRoot": "apps/api",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go build -o ../../dist/apps/api/main ./cmd/server",
        "cwd": "apps/api"
      },
      "outputs": ["{workspaceRoot}/dist/apps/api"]
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t gardbase-api:latest-parent -f Dockerfile.Api ."
      }
    },
    "docker-tag": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker tag gardbase-api:latest-parent {args.aws_account_id}.dkr.ecr.{args.aws_region}.amazonaws.com/gardbase-api:latest-parent"
      }
    },
    "docker-login": {
      "executor": "nx:run-commands",
      "options": {
        "command": "aws ecr get-login-password --region {args.aws_region} | docker login --username AWS --password-stdin {args.aws_account_id}.dkr.ecr.{args.aws_region}.amazonaws.com"
      }
    },
    "docker-push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker push {args.aws_account_id}.dkr.ecr.{args.aws_region}.amazonaws.com/gardbase-api:latest-parent"
      }
    },
    "build-and-push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run @gardbase/api:docker-build && nx run @gardbase/api:docker-tag --aws_account_id={args.aws_account_id} --aws_region={args.aws_region} && nx run @gardbase/api:docker-login --aws_account_id={args.aws_account_id} --aws_region={args.aws_region} && nx run @gardbase/api:docker-push --aws_account_id={args.aws_account_id} --aws_region={args.aws_region}"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run ./cmd/server",
        "cwd": "apps/api"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "air",
        "cwd": "apps/api"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test ./...",
        "cwd": "apps/api"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "golangci-lint run",
        "cwd": "apps/api"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "gofmt -w .",
        "cwd": "apps/api"
      }
    },
    "tidy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go mod tidy",
        "cwd": "apps/api"
      }
    }
  }
}
