{
  "name": "@gardbase/api",
  "sourceRoot": "apps/api",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go build -o ../../dist/apps/api/main ./cmd/server",
        "cwd": "apps/api"
      },
      "outputs": ["{workspaceRoot}/dist/apps/api"]
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t gardbase-api:latest -f Dockerfile.Api ."
      }
    },
    "docker-tag": {
      "executor": "nx:run-commands",
      "options": {
        "envFile": ".env",
        "command": "docker tag gardbase-api:latest ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/gardbase-api:latest"
      }
    },
    "docker-push": {
      "executor": "nx:run-commands",
      "options": {
        "envFile": ".env",
        "command": "docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/gardbase-api:latest"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run ./cmd/server",
        "cwd": "apps/api"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "air",
        "cwd": "apps/api"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test ./...",
        "cwd": "apps/api"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "golangci-lint run",
        "cwd": "apps/api"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "gofmt -w .",
        "cwd": "apps/api"
      }
    },
    "tidy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go mod tidy",
        "cwd": "apps/api"
      }
    }
  }
}
